# ============================================
# GLAMHAIRSHOP ASSISTANT - Environment Config
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# Anthropic API
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MODEL_NAME=claude-sonnet-4-20250514
MODEL_TEMPERATURE=0.7
MAX_TOKENS=2000

# ============================================
# Flask Configuration
# ============================================
FLASK_APP=app.app
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# ============================================
# Server
# ============================================
PORT=5000
HOST=0.0.0.0

# ============================================
# RAG Configuration
# ============================================
EMBEDDING_MODEL=paraphrase-multilingual-mpnet-base-v2
TOP_K_PRODUCTS=20
RERANK_TOP_N=10

# ============================================
# Categories
# ============================================
ENABLED_CATEGORIES=haircare,parrucchiere

# ============================================
# CORS (comma-separated allowed origins)
# ============================================
CORS_ORIGINS=http://localhost:5000,https://www.glamhairshop.it,https://glamhairshop.it

# ============================================
# Database (for future use)
# ============================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/glamhairshop
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Analytics (Umami)
# ============================================
UMAMI_WEBSITE_ID=your-umami-website-id
UMAMI_SCRIPT_URL=https://cloud.umami.is/script.js

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=200

# ============================================
# Features Flags
# ============================================
ENABLE_COMPARATOR=true
ENABLE_QUERY_ENRICHMENT=true
ENABLE_ANALYTICS=true

# ============================================
# Production Only
# ============================================
# SENTRY_DSN=https://your-sentry-dsn
# CLOUDFLARE_API_KEY=your-cloudflare-key
